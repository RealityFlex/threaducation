{
    "$schema": "https://www.krakend.io/schema/krakend.json",
    "version": 3,
    "timeout": "15s",  
    "cache_ttl": "300s",
    "name": "KrakenD - API Gateway",
    "port": 8090,
    "extra_config": {
      "router": {
         "return_error_msg": true
      }
    },
    "output_encoding": "json",
      "endpoints":[       
      {
        "endpoint": "/docs",
        "method": "GET",
        "input_headers": ["Content-Type"],
        "output_encoding": "no-op",
        "backend": [
          {
            "host": ["http://profile-microservice:8000"],
            "url_pattern": "/docs",
            "method": "GET",
            "encoding": "no-op"
          }
        ]
      },
      {
        "endpoint": "/api/health",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/health",
            "host": ["http://profile-microservice:8000"],
            "encoding": "json"
          }
        ]
      },
      {
        "endpoint": "/api/users/me",
        "method": "GET",
        "input_headers": ["*"],
        "input_query_strings": ["*"],
        "output_encoding": "no-op",
        "extra_config": {
          "auth/validator": {
            "alg": "RS256",
            "jwk_url": "http://keycloak:8080/realms/xd/protocol/openid-connect/certs",
            "disable_jwk_security": true,
            "operation_debug": true,
            "propagate_claims": [
              ["sub", "x-user"]
            ]
          }
        },
        "backend": [
          {
            "url_pattern": "/users/me",
            "host": ["http://profile-microservice:8000"],
            "method": "GET"
          }
        ]
      },
      {
        "endpoint": "/api/tags",
        "method": "GET",
        "input_headers": ["*"],
        "input_query_strings": ["*"],
        "output_encoding": "no-op",
        "extra_config": {
          "auth/validator": {
            "alg": "RS256",
            "jwk_url": "http://keycloak:8080/realms/xd/protocol/openid-connect/certs",
            "disable_jwk_security": true,
            "operation_debug": true,
            "roles_key": "threaducation_types.roles",
            "roles": ["EducationWorker"],
            "roles_key_is_nested": true,
            "propagate_claims": [
              ["sub", "x-user"]
            ]
          }
        },
        "backend": [
          {
            "url_pattern": "/tags/",
            "host": ["http://profile-microservice:8000"],
            "method": "GET"
          }
        ]
      }            
    ]
    }