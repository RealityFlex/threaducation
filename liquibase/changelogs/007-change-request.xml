<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-change-request-table" author="liquibase">
        <createTable tableName="change_request_table">
            <column name="change_request_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_change_request"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="from_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_change_request_from_user" referencedTableName="user_table" referencedColumnNames="user_id"/>
            </column>
            <column name="program_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_change_request_program" referencedTableName="education_program_table" referencedColumnNames="program_id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>