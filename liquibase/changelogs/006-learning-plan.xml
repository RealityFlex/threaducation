<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-learning-plan-table" author="liquibase">
        <createTable tableName="learning_plan_table">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_learning_plan"/>
            </column>
            <column name="program_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_learning_plan_program" referencedTableName="education_program_table" referencedColumnNames="program_id"/>
            </column>
            <column name="subject_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_learning_plan_subject" referencedTableName="subject_table" referencedColumnNames="subject_id"/>
            </column>
            <column name="hours" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="semester" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>