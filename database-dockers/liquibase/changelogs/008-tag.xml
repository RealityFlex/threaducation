<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-tag-table" author="liquibase">
        <createTable tableName="tag_table">
            <column name="tag_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_tag"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="tag_type_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_tag_tag_type" referencedTableName="tag_type" referencedColumnNames="tag_type_id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>