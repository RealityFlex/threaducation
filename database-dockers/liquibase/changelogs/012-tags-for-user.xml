<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-create-tags-for-user-table" author="liquibase">
        <createTable tableName="tags_for_user_table">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_tags_for_user"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_tags_for_user_user" referencedTableName="user_table" referencedColumnNames="user_id"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_tags_for_user_tag" referencedTableName="tag_table" referencedColumnNames="tag_id"/>
            </column>
        </createTable>
        
        <addUniqueConstraint 
            tableName="tags_for_user_table" 
            columnNames="user_id, tag_id" 
            constraintName="uk_tags_for_user_user_tag"/>
    </changeSet>

</databaseChangeLog>